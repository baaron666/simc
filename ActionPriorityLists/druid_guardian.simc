# actions.bear+=/maul,if=buff.vicious_cycle_maul.stack=3&cooldown.rage_of_the_sleeper.remains>2&active_enemies<=5

actions.bear+=/raze,if=cooldown.rage_of_the_sleeper.remains>2&active_enemies>=2&(talent.ravage.enabled)
# actions.bear+=/maul,if=cooldown.rage_of_the_sleeper.remains>2&active_enemies<=5

actions.bear+=/ironfur,if=!buff.ravage.up&rage.deficit<=(12+4*buff.gore.up+5*talent.soul_of_the_forest.enabled)<?(talent.blood_frenzy.enabled*3*(active_enemies>?5))

actions.bear+=/call_action_list,name=generator,if=!talent.ravage.enabled
#,if=buff.rage_of_the_sleeper.up

actions.bear+=/rake,if=(!talent.rage_of_the_sleeper.enabled|cooldown.rage_of_the_sleeper.remains<=52)&active_enemies<=2&energy>60&refreshable&variable.use_cat_filler
actions.bear+=/shred,if=(!talent.rage_of_the_sleeper.enabled|cooldown.rage_of_the_sleeper.remains<=52)&active_enemies<=2&energy>60&!dot.rake.refreshable&variable.use_cat_filler

