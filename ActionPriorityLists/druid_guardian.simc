actions.bear+=/starsurge,if=talent.starsurge.enabled&rage<20
actions.bear+=/moonfire,if=talent.lunar_insight.enabled&active_enemies>=2&active_enemies<=4
actions.bear+=/swipe_bear


actions.generator+=/mangle,if=buff.incarnation.up&active_enemies>=2&active_enemies<=10&rage.deficit>12+4*buff.gore.up+5*talent.soul_of_the_forest.enabled
actions.generator+=/mangle,if=buff.vicious_cycle_mangle.stack=3&active_enemies<=10&rage.deficit>12+4*buff.gore.up+5*talent.soul_of_the_forest.enabled
actions.generator+=/mangle,if=buff.gore.up&active_enemies<=10&rage.deficit>12+4*buff.gore.up+5*talent.soul_of_the_forest.enabled
actions.generator+=/thrash_bear,if=active_enemies>=5&rage.deficit>talent.blood_frenzy.enabled*15
actions.generator+=/mangle,if=active_enemies<=10&rage.deficit>12+4*buff.gore.up+5*talent.soul_of_the_forest.enabled
actions.generator+=/thrash_bear,if=active_enemies>=1&active_enemies<=4&rage.deficit>talent.blood_frenzy.enabled*3*active_enemies
actions.generator+=/moonfire,if=buff.galactic_guardian.up&talent.boundless_moonlight.enabled&rage.deficit>8


actions.preweave+=/heart_of_the_wild,if=buff.feline_potential_counter.stack=6
actions.preweave+=/ironfur,if=variable.ironfur_spam
actions.preweave+=/rake,if=refreshable
actions.preweave+=/shred,if=!dot.rake.refreshable


